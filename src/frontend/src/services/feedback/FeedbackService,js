// src/frontend/services/feedback/FeedbackService.js

/**
 * Task HU1-6: Mostra um feedback visual quando o usuário recebe crédito.
 * @param {number} value - Quantidade de capibas recebidas
 */
export function showCreditFeedback(value) {
  if (value > 0) {
    const feedbackBox = document.createElement("div");
    feedbackBox.className = "capiba-feedback";
    feedbackBox.textContent = `+${value} capibas creditadas!`;

    Object.assign(feedbackBox.style, {
      position: "fixed",
      bottom: "20px",
      right: "20px",
      background: "rgba(0, 150, 0, 0.8)",
      color: "white",
      padding: "12px 18px",
      borderRadius: "10px",
      fontSize: "16px",
      zIndex: 9999,
      transition: "opacity 0.5s ease-in-out",
    });

    document.body.appendChild(feedbackBox);

    // Remove o feedback após 3 segundos
    setTimeout(() => {
      feedbackBox.style.opacity = 0;
      setTimeout(() => feedbackBox.remove(), 500);
    }, 3000);
  }
}